{
  "name": "qcs-cargo-v2",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "kill-servers": "./kill-servers.sh",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
    "format": "prettier --write .",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test --project=a11y",
    "lighthouse": "lhci autorun",
    "prepare": "husky install",
    "db:generate-types": "npx pocketbase-typegen --db ./pocketbase/pb_data/data.db --out ./src/lib/types/pocketbase.d.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.0",
    "@types/pdfkit": "^0.17.4",
    "@types/pdfmake": "^0.2.12",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autoprefixer": "^10.4.16",
    "axe-playwright": "^1.2.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.0",
    "husky": "^8.0.3",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^3.3.6",
    "terser": "^5.44.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^6.4.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@fontsource/playfair-display": "^5.2.8",
    "@kinde-oss/kinde-auth-sveltekit": "^2.2.3",
    "@sentry/sveltekit": "^10.30.0",
    "@stripe/stripe-js": "^2.2.0",
    "bits-ui": "^1.8.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "idb": "^8.0.0",
    "intl-number-input": "^1.4.1",
    "lucide-svelte": "^0.561.0",
    "mode-watcher": "^1.1.0",
    "pdfkit": "^0.17.2",
    "pdfmake": "^0.2.20",
    "pocketbase": "^0.21.1",
    "qrcode": "^1.5.3",
    "resend": "^2.0.0",
    "stripe": "^14.7.0",
    "svelte-number-format": "^1.1.0",
    "svelte-sonner": "^1.0.7",
    "tailwind-merge": "^2.1.0",
    "tailwind-variants": "^0.1.18",
    "twilio": "^5.10.7",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
